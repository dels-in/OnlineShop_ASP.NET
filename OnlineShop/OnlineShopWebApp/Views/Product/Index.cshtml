@model IEnumerable<Product>

@{
    ViewBag.Title = "Products";
    Layout = "_Layout";
}

<h2>Products</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Cost.ToString("C")</td>
            <td>@product.Description</td>
            <td><img src="../../images/gamepad.jpg" width="300" height="300" alt="Gamepad"></td>
        </tr>
    }
</table>