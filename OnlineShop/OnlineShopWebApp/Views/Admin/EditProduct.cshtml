@{
	ViewBag.Title = "Editing";
	Layout = "_Layout";
}

<h2>Editing</h2>

<form method="post">
	<div class="col">
		<div class="col-4">
			<input class="form-control-mine" name="productId" placeholder="Id" required type="text">
		</div>
		<br/>
		<div class="col-4">
			<input class="form-control-mine" name="productName" placeholder="Name" type="text">
		</div>
		<br/>

		<div class="col-4">
			<input class="form-control-mine" name="productCost" placeholder="Price" type="text">
		</div>
		<br/>

		<div class="col-4">
			<input class="form-control-mine" name="productDescription" placeholder="Description" type="text">
		</div>
		<br/>
		<div class="col-4">
			<input class="form-control-mine" name="productSource" placeholder="Image source" type="text">
		</div>
		<br/>
		<div class="col-4">
			<input class="form-control-mine" name="productMetacriticScore" placeholder="Metacritic score" type="text">
		</div>
		<br/>
		<div class="col-4">
			<input class="form-control-mine" name="productGenre" placeholder="Genre" type="text">
		</div>
		<br/>
		<div>
			<button asp-action="Edit" class="btn btn-primary btn-hover btn-lg px-4 gap-3" type="submit">Edit</button>
		</div>
	</div>
</form>