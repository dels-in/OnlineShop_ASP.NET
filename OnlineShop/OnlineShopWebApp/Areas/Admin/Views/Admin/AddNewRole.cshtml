@using WebApplication1.Areas.Admin.Models

@model Role

@{
	ViewBag.Title = "AddingRole";
	Layout = "_Layout";
}

<h2>Add new role</h2>

<form method="post">
	<div class="col">
		<div asp-validation-summary="ModelOnly"></div>
		<div aria-hidden="true" aria-labelledby="exampleModalLabel" asp-validation-summary="ModelOnly" class="modal fade validation" id="exampleModal" tabindex="-1">
			<div class="modal-dialog modal-dialog-centered">
				<div class="modal-content">
					<div asp-validation-summary="ModelOnly" class="modal-body"></div>
					<div class="modal-footer">
						<button class="btn btn-primary btn-shop btn-lg px-4 gap-3" data-bs-dismiss="modal" type="button">Закрыть</button>
					</div>
				</div>
			</div>
		</div>
		<div class="col-4">
			<input asp-for="RoleName" class="form-control-mine" name="RoleName" placeholder="Name" required type="text">
			<span asp-validation-for="RoleName"></span>
		</div>
		<br/>
		<div>
			<button asp-action="AddNewRole" class="btn btn-primary btn-hover btn-lg px-4 gap-3" data-bs-target="#exampleModal" data-bs-toggle="modal" type="submit">Add</button>
		</div>
	</div>
</form>