@using WebApplication1.Areas.Admin.Models
@model Account

@{
	ViewBag.Title = "UserDetails";
	Layout = "_Layout";
	<script crossorigin="anonymous" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
}

<h2>User</h2>

<form method="post">
	<div asp-validation-summary="ModelOnly"></div>
	<table class="table table-hover table-borderless table-striped-columns">
		<tr>
			<th>First name</th>
		</tr>
		<tr>
			<th>Last name</th>
		</tr>
		<tr>
			<th>Email</th>
			<td>@Model.Email</td>
		</tr>
		<tr>
			<th>Address</th>
		</tr>
		<tr>
			<th>Role</th>
			<td>@Model.RoleName</td>
		</tr>
		<tr>
			<td class="text-end">
				<div class="dropdown">
					<button aria-expanded="false" class="btn btn-primary btn-shop btn-lg px-4 gap-3 dropdown-toggle" data-bs-toggle="dropdown" type="button">
						Actions
					</button>
					<ul class="dropdown-menu">
						<li>
							<a asp-action="ChangePassword" class="nav-link gray header-text" asp-route-userId="@Model.UserId">Change password</a>
						</li>
						<li>
							<a asp-action="ChangeUserInfo" class="nav-link gray header-text" asp-route-userId="@Model.UserId">Change personal information</a>
						</li>
						<li>
							<a asp-action="ChangeUserRole" class="nav-link gray header-text" asp-route-userId="@Model.UserId">Change role</a>
						</li>
						<li>
							<a asp-action="DeleteUser" class="nav-link gray header-text" asp-route-userId="@Model.UserId">Delete user</a>
						</li>
					</ul>
				</div>
			</td>
		</tr>
	</table>
</form>