@using WebApplication1.Areas.Admin.Models
@model Order

@{
	ViewBag.Title = "EditingOrder";
	Layout = "_Layout";
}

<h2>Edit order</h2>

<form method="post">
	<table class="table table-hover table-borderless table-striped-columns">
		<tr>
			<th>User Id</th>
			<td>@Model.UserId</td>
		</tr>
		<tr>
			<th>Order Id</th>
			<td>@Model.OrderId</td>
		</tr>
		<tr>
			<th>Email</th>
			<td>@Model.Checkout.Email</td>
		</tr>
		<tr>
			<th>Name</th>
			<td>@Model.Checkout.FirstName @Model.Checkout.LastName</td>
		</tr>
		<tr>
			<th>Address</th>
			<td>@Model.Checkout.Region @Model.Checkout.City @Model.Checkout.Address @Model.Checkout.Address2</td>
		</tr>
		<tr>
			<th>Date</th>
			<td>@Model.DateTime.ToString("dd.MM.yyyy")</td>
		</tr>
		<tr>
			<th>Time</th>
			<td>@Model.DateTime.ToString("HH:mm:ss")</td>
		</tr>
		<tr>
			<th>Status</th>
			<td>
				<select asp-for="OrderStatus" asp-items="@Html.GetEnumSelectList<OrderStatus>()" class="form-select">
				</select>
			</td>
		</tr>
		<tr class="text-center">
			<td colspan="2">
				<button asp-action="EditOrder" asp-route-orderId="@Model.OrderId" class="btn btn-primary btn-shop btn-lg px-4 gap-3" type="submit">
					Submit
				</button>
			</td>
		</tr>
	</table>
</form>