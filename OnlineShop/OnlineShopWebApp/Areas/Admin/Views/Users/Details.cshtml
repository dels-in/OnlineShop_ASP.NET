@using WebApplication1.Areas.Admin.Models
@model Account

@{
	ViewBag.Title = "UserDetails";
	Layout = "_Layout";
	<script crossorigin="anonymous" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
}

<h2>User</h2>

<form method="post">
	<div asp-validation-summary="ModelOnly"></div>
	<table class="table table-hover table-borderless table-striped-columns">
		<tr>
			<th class="col-3">Email</th>
			<td>@Model.Email</td>
		</tr>
		<tr>
			<th class="col-3">First name</th>
			<td>
				@await Component.InvokeAsync("UserInfo", new { userId = Model.UserId, propertyName = "FirstName" })
			</td>
		</tr>
		<tr>
			<th class="col-3">Last name</th>
			<td>
				@await Component.InvokeAsync("UserInfo", new { userId = Model.UserId, propertyName = "LastName" })
			</td>
		</tr>
		<tr>
			<th class="col-3">Address</th>
			<td>
				@await Component.InvokeAsync("UserInfo", new { userId = Model.UserId, propertyName = "Address" })
			</td>
		</tr>
		<tr>
			<th class="col-3">Role</th>
			<td>@Model.RoleName</td>
		</tr>
	</table>
	<div class="dropdown">
		<button aria-expanded="false" class="btn btn-primary btn-shop btn-lg px-4 gap-3 dropdown-toggle" data-bs-toggle="dropdown" type="button">
			Actions
		</button>
		<ul class="dropdown-menu">
			<li>
				<a asp-action="ChangePassword" asp-route-userId="@Model.UserId" class="nav-link gray header-text">Change password</a>
			</li>
			<li>
				<a asp-action="ChangeUserInfo" asp-route-userId="@Model.UserId" class="nav-link gray header-text">Change personal information</a>
			</li>
			<li>
				<a asp-action="ChangeUserRole" asp-route-userId="@Model.UserId" class="nav-link gray header-text">Change role</a>
			</li>
			<li>
				<a asp-action="Delete" asp-route-userId="@Model.UserId" class="nav-link gray header-text">Delete user</a>
			</li>
		</ul>
	</div>
</form>