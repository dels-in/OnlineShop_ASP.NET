@using OnlineShopWebApp.Areas.Admin.Models
@model OrderViewModel

<h2>Edit order</h2>

<form method="post">
	<table class="table table-hover table-borderless table-striped-columns">
		<tr>
			<th>User Id</th>
			<td>@Model.UserId</td>
		</tr>
		<tr>
			<th>Order Id</th>
			<td>@Model.Id</td>
		</tr>
		<tr>
			<th>Email</th>
			<td>@Model.UserInfo.Email</td>
		</tr>
		<tr>
			<th>Name</th>
			<td>@Model.UserInfo.FirstName @Model.UserInfo.LastName</td>
		</tr>
		<tr>
			<th>Address</th>
			<td>@Model.UserInfo.Region @Model.UserInfo.City @Model.UserInfo.Address @Model.UserInfo.Address2</td>
		</tr>
		<tr>
			<th>Date</th>
			<td>@Model.DateTime.ToString("dd.MM.yyyy")</td>
		</tr>
		<tr>
			<th>Time</th>
			<td>@Model.DateTime.ToString("HH:mm:ss")</td>
		</tr>
		<tr>
			<th>Status</th>
			<td>
				<select asp-for="OrderStatus" asp-items="@Html.GetEnumSelectList<OrderStatusViewModel>()" class="form-select" name="orderStatusViewModel">
				</select>
			</td>
		</tr>
		<tr class="text-center">
			<td colspan="2">
				<button asp-action="Edit" asp-route-orderId="@Model.Id" class="btn btn-primary btn-shop btn-lg px-4 gap-3" type="submit">
					Submit
				</button>
			</td>
		</tr>
	</table>
</form>